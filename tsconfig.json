{
    "compilerOptions": {
        "jsx": "react",
        "strict": true,
        "sourceMap": true,
        "baseUrl": ".",
        "target": "esnext",
        "module": "esnext",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "paths": {
            "@/*": ["src/*"]
        },
        "lib": [
        "dom",
        "esnext"
        ],
    },
    "include": ["src", "**/*.ts", "**/*.tsx"],
    "exclude": [
        "dist",
        "node_modules"
    ]
}